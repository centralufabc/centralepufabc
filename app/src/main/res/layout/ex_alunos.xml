<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="match_parent">

            <TextView
                android:text="A EPUFABC mudou minha vida. Graças a ela eu estou na universidade atualmente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/frase_aluno"
                android:textSize="14sp"
                android:fontFamily="serif"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="20dp"
                app:layout_constraintLeft_toRightOf="@+id/img_aluno"
                android:layout_marginLeft="20dp" />

            <ImageView
                app:srcCompat="@drawable/kleverson_nascimento"
                android:id="@+id/img_aluno"
                android:scaleType="fitXY"
                android:layout_width="90dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_height="90dp" />

            <TextView
                android:text="Kleverson Nascimento. Ciência da computação, UFABC"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content"
                android:onClick="captura"
                android:id="@+id/txt_curso"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/img_aluno"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frase_aluno"
                android:layout_marginTop="4dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>



    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_contador"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_contador">

        <TextView
            android:text="Não desanima, as férias começam daqui:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_frase_ini"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:text="Dias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_dias" />

        <TextView
            android:text="Horas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:id="@+id/textView20"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toRightOf="@+id/textView19"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_horas" />

        <TextView
            android:text="Minutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/textView20"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_minutos" />

        <TextView
            android:text="Segundos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:id="@+id/textView23"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/textView22"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_segundos" />

        <TextView
            android:text="128"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="36sp"
            android:id="@+id/txt_dias"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_frase_ini"
            app:layout_constraintRight_toRightOf="@+id/textView19"
            app:layout_constraintLeft_toLeftOf="@+id/textView19" />

        <TextView
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_horas"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_frase_ini"
            app:layout_constraintRight_toRightOf="@+id/textView20"
            app:layout_constraintLeft_toLeftOf="@+id/textView20" />

        <TextView
            android:text="37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_minutos"
            android:textColor="#000000"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_frase_ini"
            app:layout_constraintRight_toRightOf="@+id/textView22"
            app:layout_constraintLeft_toLeftOf="@+id/textView22" />

        <TextView
            android:text="52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_segundos"
            android:textColor="#000000"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_frase_ini"
            app:layout_constraintRight_toRightOf="@+id/textView23"
            app:layout_constraintLeft_toLeftOf="@+id/textView23" />

    <ListView
        android:layout_width="0dp"
        android:id="@+id/lista_gifs"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
